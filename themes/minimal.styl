#App.theme-minimal {

    * {
        font-family: /* 'NK57',  *//* 'gowun batang', */ 'poppins', 'suit', 'freemono', monospace;
    }

    /* .node .value {
        font-family: 'gowun batang' !important;
    } */

    button, input {
        box-shadow: inset 0px 0px 0px 1px var(--shade);
        border-radius: 0.25em;
        transition: 
            color 0.2s ease, 
            box-shadow 0.3s ease, 
            background-color 0.3s ease;
        font-weight: bold;
    }

    button:hover {
        color: var(--light);
        box-shadow: inset 0px 0px 0px 1px var(--mild);
    }

    button:focus, input:focus {
        background: var(--shade);
        box-shadow: inset 0px 0px 0px 1px var(--mild);
    }

    button:active {
        /* scale: 0.95 */
        transition: none;
        box-shadow: inset 0px 0px 0px 2px var(--nice);
    }

    
    button:before {
        display: none;
    }
    
    input:hover, textarea:hover, input:focus, textarea:focus {
        background-color: var(--shade);
        box-shadow: inset 0px 0px 0px 1px var(--mild);
    }

    .linksOpener:hover {
        /* scale: 0.9; */
        background-color: var(--mildshade);
    }



    .node textarea {
        letter-spacing: 0.5px;    
    }

    .node textarea:hover, .node textarea:focus {
        background-color: transparent;
        box-shadow: none;
    }

    .node {
    }


}